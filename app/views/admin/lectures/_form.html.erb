<div class="field">
  <%= f.label :course_id, 'Course' %>
  <% courses = Course.active.collect{ |c| [c.name, c.id] } %>
  <%= f.select(:course_id, options_for_select(courses, {selected: @lecture.course_id}), {}, class: 'select2') %>
</div>

<div class="field">
  <%= f.label :section %>
  <%= f.select(:section, options_for_select(Course.sections, {selected: @lecture.section}), {}, class: 'select2') %>
</div>

<div class="field">
  <%= f.label :publish_on %>
  <%= f.datetime_select :publish_on, order: [:month, :day, :year], ampm: true %>
</div>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :readings %>
  <%= f.relation_field :readings, label_field: 'title', name: 'lecture[readings]' %>
</div>


<div class="field">
  <%= f.label :active %>
  <%= f.check_box :active %>
</div>

<%= f.content_block_fields %>