<div class="field">
  <%= f.label :course_id, 'Course' %>
  <% courses = Course.active.collect{ |c| [c.name, c.id] } %>
  <%= f.select(:course_id, options_for_select(courses, {selected: @assignment.course_id}), {}, class: 'select2') %>
</div>

<div class="field">
  <%= f.label :section %>
  <%= f.select(:section, options_for_select(Course.sections, {selected: @assignment.section}), {}, class: 'select2') %>
</div>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :publish_on %>
  <%= f.datetime_select :publish_on, order: [:month, :day, :year], ampm: true %>
</div>

<div class="field">
  <%= f.label :active %>
  <%= f.check_box :active %>
</div>


<%= f.content_block_fields %>