<div class="field">
  <%= f.label :course_id %>
  <% courses = Course.all.collect { |course| [course.name, course.id] } %>
  <%= f.select(:course_id, options_for_select(courses, { selected: @student.course_id }), {}, class: 'select2') %>
</div>

