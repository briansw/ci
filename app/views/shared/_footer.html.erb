<div class="course-info">
  Core Interaction<br />
  <%= @course.semester %> <%= @course.year %>
  <div class="version-number">
    <%= image_tag('crab.gif') %>
    <div style="margin-top: 10px; font-family: monospace;">
      git add .<br />
      git commit -a -m 'message ...'<br />
      git push
    </div>
  </div>
</div>

<div class="students">
  <ul>
    <% @course.students.by_name.each do |student| %>
      <li><%= link_to(student.full_name, student.url, target: '_blank') %></li>
    <% end %>
  </ul>
</div>

<% content_for :init_student_list do %>
<script type="text/javascript">
  var students = [];
      students = <%= raw(@course.students.flat_list) %>;
  if (students.length > 0) {
    init_wheel_of_fortune(students);
  }
</script>
<% end %>
